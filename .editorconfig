#
# ~/.editorconfig
#
# See https://editorconfig.org.
#

# Top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 4

[{*.json}]
indent_size = 2

[*.py]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
