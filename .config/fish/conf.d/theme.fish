#
# ~/.config/fish/conf.d/theme.fish
#
# This file contains the color configuration for syntax highlighting.
# See https://fishshell.com/docs/current/interactive.html#syntax-highlighting.
#

# Syntax highlighting variables
set -g fish_color_autosuggestion 'brblack'
set -g fish_color_cancel '--background=red'
set -g fish_color_command 'green' --bold
set -g fish_color_comment 'brblack'
set -g fish_color_end 'yellow'
set -g fish_color_error 'brred'
set -g fish_color_escape 'magenta'
set -g fish_color_operator 'yellow'
set -g fish_color_param 'cyan'
set -g fish_color_quote 'yellow'
set -g fish_color_redirection 'brblue'
set -g fish_color_search_match 'bryellow'
set -g fish_color_valid_path '--underline'

# Pager color variables
set -g fish_pager_color_completion 'brblack'
set -g fish_pager_color_description 'yellow'
set -g fish_pager_color_prefix 'yellow'
set -g fish_pager_color_progress 'white'
set -g fish_pager_color_selected_background '--background=yellow'
set -g fish_pager_color_selected_completion 'black'
set -g fish_pager_color_selected_description 'black'
set -g fish_pager_color_selected_prefix 'black'
